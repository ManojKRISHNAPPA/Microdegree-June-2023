pipeline {
    agent any
    
    stages {
        stage('Get Today\'s Date') {
            steps {
                script {
                    def today = new Date()
                    def formattedDate = today.format("yyyy-MM-dd")
                    echo "Today's date is: ${formattedDate}"
                }
            }
        }
        
        // Add more stages as needed
    }
}
